{
  "name": "hardhat-foundry-template",
  "version": "1.0.0",
  "description": "The harmony between Foundry and Hardhat.",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "hardhat test",
    "fcoverage": "rm -r coverage || true && rm -r coverage.json || true && forge coverage --report lcov",
    "hcoverage": "rm lcov.info || true && hardhat coverage",
    "prepare": "foundryup && forge install && forge install foundry-rs/forge-std && forge install OpenZeppelin/openzeppelin-contracts"
  },
